generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  f_name String
  l_name String
  username String @unique
  password String
  email String @unique
  country String?
  books Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id Int @default(autoincrement()) @id
  name String
  description String?
  summary String?
  userId Int
  user User @relation(fields: [userId], references: [id])
  documents Document[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Document {
  id Int @default(autoincrement()) @id
  file_name String
  file_path String
  book_id Int
  book Book @relation(fields: [book_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}